<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        tools:context=".fragment.GuideFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/guide1"
                        android:layout_alignParentTop="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/next_button_light_stroke"
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:text="@string/guide1"
                            android:textSize="14dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginVertical="5dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            app:tint="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/guide2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/next_button_light_stroke"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/guide1"
                        android:layout_marginHorizontal="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:text="@string/guide2"
                            android:layout_centerVertical="true"
                            android:textSize="14dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginVertical="5dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            app:tint="@color/white" />
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/large1"
                        android:layout_width="match_parent"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/guide2">

                        <include layout="@layout/full_native_container" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/guide3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/next_button_light_stroke"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/large1"
                        android:layout_marginHorizontal="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:text="@string/guide3"
                            android:textSize="14dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginVertical="5dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            app:tint="@color/white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/guide4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/next_button_light_stroke"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="30dp"
                        android:layout_below="@+id/guide3"
                        android:layout_marginHorizontal="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="50dp"
                            android:text="@string/guide4"
                            android:layout_centerVertical="true"
                            android:textSize="14dp"
                            android:layout_alignParentStart="true"
                            android:layout_marginVertical="5dp"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/white" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/right_button"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            app:tint="@color/white" />
                    </RelativeLayout>
                </RelativeLayout>



            </androidx.core.widget.NestedScrollView>



        </RelativeLayout>

    </FrameLayout>
</layout>